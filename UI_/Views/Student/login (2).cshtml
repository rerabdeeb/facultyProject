<script>
    $(document).ready(function () {

        $('#btnLogin').click(function () {
            name = $('#txtNa').val();
            password = $('#txtPass').val();

            $.ajax({

                url: "/Student/login1?user=" + name +
                    "&pass=" + password,
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    if (result == "Success") {
                        alert("Welcome");

                    }
                    else {
                        alert("Wrong Email Or Password");
                    }
                }

            });

        })
    })
</script>

